# Server Configuration
NODE_ENV=development
PORT=5150
API_PREFIX=/api/v2

# Database
MONGODB_URI=mongodb://localhost:27017/lms_v2
MONGODB_URI_TEST=mongodb://localhost:27017/lms_v2_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
DISABLE_REDIS=false

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRE=2h
JWT_REFRESH_EXPIRE=7d

# Field-Level Encryption (ISS-011)
# AES-256-GCM encryption for sensitive PII (ID numbers, A-numbers)
# CRITICAL: Keep these keys secure and never commit to version control
# Generate a new key: openssl rand -hex 32
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Key rotation support (uncomment when rotating keys)
# ENCRYPTION_KEY_V02=
# ENCRYPTION_KEY_V03=

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# File Upload
MAX_FILE_SIZE=524288000
UPLOAD_PATH=./uploads

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
