{
  "name": "lms-api-v2",
  "version": "2.0.0",
  "description": "LMS V2 - Clean Architecture RESTful API",
  "main": "dist/server.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "start": "NODE_ENV=production node dist/server.js",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:watch": "NODE_ENV=development ts-node-dev --respawn --transpile-only --watch src src/server.ts",
    "test": "NODE_ENV=test jest --runInBand",
    "test:watch": "NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand",
    "test:unit": "NODE_ENV=test jest tests/unit --runInBand",
    "test:integration": "NODE_ENV=test jest tests/integration --runInBand",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "seed:mock": "MOCK_DB_URI=mongodb://localhost:27017/lms_v2_mockdata ts-node scripts/seed-mock-data.ts",
    "purge:mock": "MOCK_DB_URI=mongodb://localhost:27017/lms_v2_mockdata ts-node scripts/purge-mock-data.ts",
    "purge:mock:force": "MOCK_DB_URI=mongodb://localhost:27017/lms_v2_mockdata ts-node scripts/purge-mock-data.ts --force",
    "reset:mock": "npm run purge:mock:force && npm run seed:mock",
    "contracts:validate": "ts-node scripts/validate-contracts.ts",
    "contracts:export": "ts-node scripts/export-contracts.ts",
    "contracts:docs": "ts-node scripts/generate-openapi.ts"
  },
  "keywords": [
    "lms",
    "learning-management-system",
    "education",
    "api",
    "nodejs",
    "express",
    "typescript",
    "mongodb",
    "rest-api"
  ],
  "author": "LMS Development Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.955.0",
    "@aws-sdk/lib-storage": "^3.955.0",
    "adm-zip": "^0.5.16",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-safe": "^9.1.0",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "fs-extra": "^11.3.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.0",
    "multer": "^2.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "validator": "^13.15.26",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^4.17.25",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.19.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.10",
    "@types/xlsx": "^0.0.35",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^11.0.0",
    "morgan": "^1.10.0",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "yaml": "^2.8.2"
  }
}
